@using Furni101.App.ViewModels.ProductViewModels
@model ProductUpdateVM
<div class="container">
	<div class="row">
		<form method="post" asp-action="Update" asp-controller="Product" enctype="multipart/form-data">
			<div class="form-group">
				<label for="title">Name</label>
				<input asp-for="Name" class="form-control" id="name" placeholder="Name">
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>
			<div class="form-group">
				<label for="description">Price</label>
				<input asp-for="Price" class="form-control" id="price" placeholder="Description">
				<span class="text-danger" asp-validation-for="Price"></span>

			</div>

			<div class="form-group">
				<label for="imageName">ImageName</label>
				<input asp-for="ImageName" class="form-control" id="ImageName" placeholder="ImageName">
				<span class="text-danger" asp-validation-for="ImageName"></span>

			</div>


			<div class="form-group">
				<label for="MainImage">MainImage</label>
				<input asp-for="MainImage" class="form-control" id="MainImage" placeholder="MainImage">
				<span class="text-danger" asp-validation-for="MainImage"></span>
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
			<a asp-action="Index" class="btn btn-secondary">Cancel</a>
		</form>
	</div>
</div>
