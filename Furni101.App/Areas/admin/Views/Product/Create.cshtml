@using Furni101.App.ViewModels.ProductViewModels

@model ProductCreateVM
<div class="container">
	<div class="row">
		<form method="post" asp-action="Create" asp-controller="Product" enctype="multipart/form-data">
			<div class="form-group">
				<label for="title">Name</label>
				<input asp-for="Name"  class="form-control" id="name" placeholder="Name">
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>
			<div class="form-group">
				<label for="description">Price</label>
				<input asp-for="Price" class="form-control" id="price" placeholder="Description">
				<span class="text-danger" asp-validation-for="Price"></span>

			</div>

		@* 	<div class="form-group">
				<label for="isDeleted">IsDeleted</label>
				<input asp-for="IsDeleted" class="form-control" id="IsDeleted" placeholder="IsDeleted">
				<span class="text-danger" asp-validation-for="IsDeleted"></span>

			</div> *@
			<div class="form-group">
				<label for="imageName">ImageName</label>
				<input asp-for="ImageName" class="form-control" id="ImageName" placeholder="ImageName">
				<span class="text-danger" asp-validation-for="ImageName"></span>

			</div>


			<div class="form-group">
				<label for="imageUrl">ImageUrl</label>
				<input asp-for="ImageUrl" class="form-control" id="imageUrl" placeholder="ImageUrl">
				<span class="text-danger" asp-validation-for="ImageUrl"></span>
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
			<a asp-action="Index" class="btn btn-secondary">Cancel</a>
		</form>
	</div>
</div>
