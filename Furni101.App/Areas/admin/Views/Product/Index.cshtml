@using Furni101.App.Models
@model List<Product>

<div class="container">
	<div class="row">

		<div class="row">
			<div class="col-2">
		<a class="btn btn-success" asp-controller="Product" asp-action="Create">Create</a>
			</div>
		
		</div>
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col">Price</th>
					<th scope="col">ImageUrl</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (Product feature in Model)
				{
					<tr>
						<th scope="row">@feature.Id</th>
						<td>@feature.Name</td>
						<td>@feature.Price</td>
						<td> <img src="~/assets/images//@feature.ImageUrl" alt="Alternate Text" /> </td>
						<td>
							<a class="btn btn-warning">Update</a>
							<a asp-action="Delete" asp-route-id="@feature.Id" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}

			</tbody>
		</table>
	</div>
</div>